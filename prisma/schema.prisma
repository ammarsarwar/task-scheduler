generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime
  priority    Priority
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  name     String
  password String
  tasks    Task[]
}

model TempUser {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  otp       String
  createdAt DateTime @default(now())
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
